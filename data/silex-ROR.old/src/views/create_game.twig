{% extends layout_template  %}

{% block title %}Create game{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>Create Game</h1>
    </div>
         <form class="form-horizontal" method="POST" action="{{ path('CreateGame') }}">
             <fieldset>
            <div class="control-group">
                <label class="control-label">Scenario:</label>
                    <div class="controls">
                    {% for valid_scenario in valid_scenarios %}
                        <label class="radio">
                            <input type="radio" name="scenario" value="{{valid_scenario}}">{{valid_scenario}}
                        </label>
                    {% endfor %}
                    </div>
                <label class="control-label">Name:</label>
                    <div class="controls">
                        <input name="name" type="text" id="name">
                    </div>
            </div>
            </fieldset>
             <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn">Create game</button>
                </div>
            </div>
         </form>
{% endblock %}
